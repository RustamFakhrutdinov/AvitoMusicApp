<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_downloads">

    <fragment
        android:id="@+id/navigation_downloads"
        android:name="com..avitomusicapp.ui.downloads.DownloadsFragment"
        android:label="@string/title_download"
        tools:layout="@layout/fragment_downloads" >
        <action
            android:id="@+id/action_navigation_downloads_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com..avitomusicapp.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com..avitomusicapp.ui.player.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player">
        <argument
            android:name="track"
            app:argType="com..playlistmaker.search.domain.models.Track" />
    </fragment>

</navigation>