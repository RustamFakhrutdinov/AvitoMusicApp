<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TrackCover">
        <item name="android:layout_width">@dimen/track_cover_size</item>
        <item name="android:layout_height">@dimen/track_cover_size</item>
        <item name="android:layout_weight">0.125</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PerformerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/performer_size</item>
    </style>

    <style name="ArrowForward">
        <item name="android:layout_width">@dimen/arrow_forward</item>
        <item name="android:layout_height">@dimen/arrow_forward</item>
        <item name="android:layout_weight">0.067</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left</item>
    </style>

    <style name="SearchScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">@dimen/search_padding</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:hint">@string/title_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ClearIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:visibility">gone</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableLeft">@drawable/clear</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">238dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayerFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ArrowBackForPlayer">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="srcCompat">@drawable/arrow_back</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="TextPlayer">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ProgressTint">
        <item name="android:progressTint">@color/white</item>
    </style>
    <style name="BottomNavColor">
        <item name="android:background">@color/black</item>
    </style>
</resources>